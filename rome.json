{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyInterface": "off"
      }
    }
  },
  "files": {
    "ignore": ["**/*.json", "**/*.md"]
  },
  "formatter": {
    "enabled": true,
    "indentSize": 4,
    "indentStyle": "space",
    "lineWidth": 180
  }
}
