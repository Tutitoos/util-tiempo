/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "allowJs": true,
      "sourceMap": false,
	  "declaration": true,
      "rootDir": "./src",
      "outDir": "./dist",
	  "declarationDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
	  "skipDefaultLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
