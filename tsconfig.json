{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "lib",
      "declarationDir": "lib",
      "rootDir": "src",
      "declaration": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "lib"]
}